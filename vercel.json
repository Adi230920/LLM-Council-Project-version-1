{
    "version": 2,
    "framework": null,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "^/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "^/health$",
            "dest": "/api/index.py"
        },
        {
            "src": "^/docs$",
            "dest": "/api/index.py"
        },
        {
            "src": "^/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 60
        }
    }
}
